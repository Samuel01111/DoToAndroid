<resources>
    <!-- Base application theme. -->
    <style name="Theme.DoTo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#A1CF60</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DoTo.Custom">
        <item name="colorPrimary">#A1CF60</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTextInputLayout" parent="Widget.Design.TextInputLayout" >
        <item name="android:background" >@color/white</item>
    </style>

    <style name="TextTitleScreenGeneral" parent="TextAppearance.AppCompat.Title" >
        <item name="android:background">#EEEFEAAE</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextTitleEmptyListScreen">
        <item name="android:background">#EEFFE430</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CheckboxInputLayout" >
        <item name="android:colorBackground" >#FFEB3B</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button" >
        <item name="android:colorBackground" >#FF0000</item>
        <item name="backgroundColor" >#FF0000</item>
    </style>
</resources>